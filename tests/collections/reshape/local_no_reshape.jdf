#include "parsec/data_dist/matrix/matrix.h"


    /*******************
     * No local reshape
     * When only type_remote is used on the dependencies, the pointer to the origianl
     * matrix tiles is passed to the succesors tasks. Thus, the full original tiles are
     * set to 0.
     *******************/

%}

descA  [type = "parsec_tiled_matrix_t*"]

/**************************************************
 *                       READ_A                   *
 **************************************************/
READ_A(m, k)  [profile = off]

m = 0 .. descA->mt-1
k = 0 .. descA->nt-1

: descA(m, k)

RW A <- descA(m, k)
     -> A SET_ZEROS(m, k) [type_remote = LOWER_TILE]

BODY
{
}
END

/**************************************************
 *                     SET_ZEROS                  *
 **************************************************/
SET_ZEROS(m, k)  [profile = off]

m = 0 .. descA->mt-1
k = 0 .. descA->nt-1

: descA(m, k)

RW A <- A READ_A(m, k)
     -> A WRITE_A(m, k)

BODY
{
    memset( A, 0, sizeof(int)*descA->mb*descA->nb);
}
END

/**************************************************
 *                       WRITE_A                  *
 **************************************************/
WRITE_A(m, k)  [profile = off]

m = 0 .. descA->mt-1
k = 0 .. descA->nt-1

: descA(m, k)

RW A <- A SET_ZEROS(m, k)
     -> descA(m, k)       [type = LOWER_TILE type_data = LOWER_TILE]
BODY
{
}
END

