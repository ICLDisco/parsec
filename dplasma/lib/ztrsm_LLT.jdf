/*
 * Pseudo-task
 */
zgemm_in_A0(k,m) [profile = off]
  k = 0     .. (descB->mt-2)
  m = (k+1) .. (descB->mt-1)

  : descA((descB->mt-1)-k,(descB->mt-1)-m)

  RW C <- descA((descB->mt-1)-k,(descB->mt-1)-m)
