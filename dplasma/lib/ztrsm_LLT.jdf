                           D /* descB((descB->mt-1)-k,n) */,              ldb,
                   lalpha, E /* descB((descB->mt-1)-m,n) */,              ldbm );
#endif /* !defined(PARSEC_DRY_RUN) */

    printlog("CORE_zgemm(%d, %d, %d)\n"
